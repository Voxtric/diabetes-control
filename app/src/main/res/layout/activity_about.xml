<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".AboutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/app_name_text"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/icon_rounded"
            android:contentDescription="@string/icon_content_description" />

        <TextView
            android:id="@+id/app_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/app_version_text"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/app_version_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/database_version_text"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size"
            android:text="@string/app_version_text"/>

        <TextView
            android:id="@+id/database_version_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size"
            android:text="@string/database_version_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/legal_notice_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                android:text="@string/legal_notice_label"
                android:labelFor="@id/legal_notice_text"
                android:onClick="toggleVisibility"/>

            <TextView
                android:id="@+id/legal_notice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/privacy_policy_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                android:text="@string/privacy_policy_label"
                android:labelFor="@id/privacy_policy_text"
                android:onClick="toggleVisibility"/>

            <TextView
                android:id="@+id/privacy_policy_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/open_source_information_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                android:text="@string/open_source_information_label"
                android:labelFor="@id/open_source_information_text"
                android:onClick="toggleVisibility"/>

            <TextView
                android:id="@+id/open_source_information_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
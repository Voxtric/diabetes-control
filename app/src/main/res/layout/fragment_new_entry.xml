<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEntryFragment">

    <LinearLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:padding="@dimen/activity_horizontal_margin">

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_label_weight"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                style="@style/BasicText"
                android:text="@string/date_label"
                android:focusable="true"
                android:labelFor="@id/button_date"/>

            <Button
                android:id="@+id/button_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_input_weight"
                android:background="@drawable/back"
                android:minHeight="0dp"
                style="@style/BasicText"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_label_weight"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                style="@style/BasicText"
                android:text="@string/time_label"
                android:labelFor="@id/button_time"/>

            <Button
                android:id="@+id/button_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_input_weight"
                android:background="@drawable/back"
                android:minHeight="0dp"
                style="@style/BasicText"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Event -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_label_weight"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:gravity="center_vertical"
                android:text="@string/event_label"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:labelFor="@id/spinner_event"/>

            <Spinner
                android:id="@+id/spinner_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_input_weight"
                android:background="@drawable/back"/>
        </LinearLayout>

        <!-- Blood Glucose Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_label_weight"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                style="@style/BasicText"
                android:text="@string/blood_glucose_level_label"
                android:labelFor="@id/edit_text_blood_glucose_level"/>

            <EditText
                android:id="@+id/edit_text_blood_glucose_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_input_weight"
                android:background="@drawable/back"
                android:hint="@string/blood_glucose_level_hint"
                style="@style/BasicText"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:nextFocusForward="@id/auto_complete_insulin_name"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Insulin Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_label_weight"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                style="@style/BasicText"
                android:text="@string/insulin_name_label"
                android:labelFor="@id/auto_complete_insulin_name"/>

            <AutoCompleteTextView
                android:id="@+id/auto_complete_insulin_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_input_weight"
                android:background="@drawable/back"
                android:hint="@string/insulin_name_hint"
                style="@style/BasicText"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/edit_text_insulin_dose"
                android:inputType="textCapWords"
                android:gravity="center"
                android:tag="insulin_name"/>
        </LinearLayout>

        <!-- Insulin Dose -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_label_weight"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                style="@style/BasicText"
                android:text="@string/insulin_dose_label"
                android:labelFor="@id/edit_text_insulin_dose"/>

            <EditText
                android:id="@+id/edit_text_insulin_dose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/new_entry_input_weight"
                android:background="@drawable/back"
                android:hint="@string/insulin_dose_hint"
                style="@style/BasicText"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Food Eaten -->
        <TextView
            android:id="@+id/text_view_food_eaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BasicText"
            android:text="@string/food_eaten_label"
            android:labelFor="@id/food_eaten_item_list"/>

        <LinearLayout
            android:id="@+id/food_eaten_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:orientation="vertical">
        </LinearLayout>

        <!-- Additional Notes -->
        <TextView
            android:id="@+id/text_view_additional_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BasicText"
            android:text="@string/additional_notes_label"
            android:labelFor="@id/auto_complete_additional_notes"/>

        <AutoCompleteTextView
            android:id="@+id/auto_complete_additional_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:paddingLeft="@dimen/text_box_padding"
            android:paddingStart="@dimen/text_box_padding"
            android:paddingRight="@dimen/text_box_padding"
            android:paddingEnd="@dimen/text_box_padding"
            android:background="@drawable/back"
            android:hint="@string/additional_notes_hint"
            style="@style/BasicText"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:minLines="3"
            android:tag="additional_notes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_see_previous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/see_previous_text" />

            <Button
                android:id="@+id/button_add_new_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_new_entry_text" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarAppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="BasicText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@drawable/enableable</item>
    </style>

    <style name="ShowcaseViewTitle">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/colorPrimaryAlpha</item>
        <item name="sv_showcaseColor">@color/colorAccent</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseViewTitle</item>
    </style>

</resources>

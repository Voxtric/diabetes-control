<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="title_backup_settings">Google Drive Backup</string>



    <!-- Sign In Dialog -->
    <string name="title_sign_in">Sign In?</string>
        <string name="message_sign_in">
"Are you sure you want to enable Google Drive backups?

This will require you to sign in and will create a folder on your Google Drive containing all your data."
        </string>



    <!-- Sign Out Dialog -->
    <string name="title_sign_out">Sign Out?</string>
    <string name="message_sign_out">
"Are you sure you want to sign out?

This will delete the backup from your Google Drive."
        </string>



    <!-- Check AutoBackup Safe Dialog -->
    <string name="title_auto_backup_safe">Backup Already Exists</string>
        <string name="message_auto_backup_safe">
"A backup file already exists on your Google Drive.

Would you like to recover your backup, or overwrite it?"
        </string>



    <!-- Backup Recovery Dialog -->
    <string name="title_backup_recovery">Recover Backup</string>
        <string name="message_backup_recovery">
"Are you sure you want to recover your backup?

This will overwrite your local data with the data stored on your Google Drive."
        </string>



    <!-- Backup Progress Dialog -->
    <string name="title_backup_in_progress">Backup In Progress</string>
        <string name="message_backup_in_progress">
"Your data is being backed up to your Google Drive.

You can use the app as usual whilst this happens, and if you have allowed it in your settings, you will be notified once the backup is complete."
        </string>



    <!-- Recovery Wait Dialog -->
    <string name="title_recovery_wait">Recovery In Progress</string>
        <string name="message_recovery_wait">
"Your data is being recovered from the Google Drive.

This may take some time, so feel free to close the app and you will be notified once the recovery is complete."
        </string>



    <!-- Dialog Options -->
    <string name="sign_in_dialog_option">Sign In</string>
    <string name="sign_out_dialog_option">Sign Out</string>
    <string name="recover_dialog_option">Recover</string>



